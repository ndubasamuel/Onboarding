<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Screens.HomeFragment">


    <LinearLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@color/blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_marginTop="10dp"
            android:background="@color/blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
            <com.google.android.material.appbar.MaterialToolbar
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:navigationIcon="@drawable/baseline_arrow_back_24"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="30dp"
                app:title="ECLECTICS CHAMA"
                app:titleTextColor="@color/white"
                app:flow_verticalAlign="top"
                app:layout_constraintStart_toStartOf="parent"/>
        </com.google.android.material.appbar.AppBarLayout>
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:elevation="10dp"
        app:cardBackgroundColor="@color/white"
        android:backgroundTint="@color/white"
        android:background="@color/white"
        android:layout_marginTop="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bank_account"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                android:layout_marginTop="80dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loans"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:layout_marginStart="165dp"
                android:layout_marginTop="80dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_approvals"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:layout_marginStart="260dp"
                android:layout_marginTop="80dp"
                />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_view_bank"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:background="@drawable/custom_card"
            android:backgroundTint="@color/white"
            android:elevation="4dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:src="@drawable/bank" />

        </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_view_loans"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:elevation="4dp"
                android:background="@drawable/custom_card"
                android:backgroundTint="@color/white"
                android:layout_marginStart="145dp"
                android:layout_marginTop="20dp"
                >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/payment" />

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_view_approvals"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:elevation="4dp"
                android:background="@drawable/custom_card"
                android:backgroundTint="@color/white"
                android:layout_marginStart="260dp"
                android:layout_marginTop="20dp"
                >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/home" />

            </com.google.android.material.card.MaterialCardView>



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="100dp"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_group"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:layout_marginStart="25dp"
                android:layout_marginTop="80dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/members"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:layout_marginStart="155dp"
                android:layout_marginTop="80dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/withdrawals"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:layout_marginStart="265dp"
                android:layout_marginTop="80dp"
                />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_view_edit_group"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:background="@drawable/custom_card"
                android:backgroundTint="@color/white"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/user" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_view_members"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:background="@drawable/custom_card"
                android:backgroundTint="@color/white"
                android:elevation="4dp"
                android:layout_marginStart="145dp"
                android:layout_marginTop="20dp"
                >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/people" />

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_view_withdrawals"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:backgroundTint="@color/white"
                android:background="@drawable/custom_card"
                android:elevation="4dp"
                android:layout_marginStart="260dp"
                android:layout_marginTop="20dp"
                >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/cash_withdrawal" />

            </com.google.android.material.card.MaterialCardView>

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="15dp"
            android:background="@color/white"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="15dp"
            android:padding="20dp"
            android:layout_gravity="bottom"
            app:cardElevation="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:textColor="@color/tacwise"
                android:text="@string/group_details"/>
        </LinearLayout>

            <TextView
                android:id="@+id/tv_frequency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/contribution_frequency"
                android:layout_marginTop="40dp"
                />
            <TextView
                android:id="@+id/tv_group_members"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/group_members"
                android:textSize="16sp"
                android:layout_marginStart="210dp"
                android:layout_marginTop="40dp"
                />

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/amount_weekly"
                android:textStyle="bold"
                android:layout_marginTop="63dp"/>
            <TextView
                android:id="@+id/tv_number_of_people"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8"
                android:gravity="end"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="250dp"
                android:layout_marginTop="63dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/group_balance"
                android:textSize="16sp"
                android:layout_marginTop="100dp"
                />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:textColor="@color/black"
                   android:text="@string/paybill_account_balance"
                   android:layout_marginTop="100dp"
                   android:gravity="end"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ksh 293535"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="130dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Ksh 295959"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="130dp"
                android:gravity="end"/>

        </androidx.cardview.widget.CardView>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_my_upcoming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="@string/my_upcoming_contributions"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_view"
        app:layout_constraintEnd_toEndOf="parent"
        />

        <TextView
            android:layout_width="61dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="View all"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintTop_toBottomOf="@id/card_view"
            app:layout_constraintEnd_toEndOf="parent"
            />
    <ImageButton
        android:id="@+id/button_view_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/baseline_arrow_forward_ios_24"
        app:layout_constraintTop_toBottomOf="@id/card_view"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_upcoming"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:layout_height="110dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_my_upcoming"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_bluish_drawable"

            >
        <TextView
            android:id="@+id/tv_chama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eclectics Chama"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Defaulted"
            android:textColor="@color/black"
            android:gravity="end"
            android:textStyle="bold"
            android:layout_marginStart="180dp"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Due Date: 06-09-2021"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/penalty_amount"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="100dp"
            android:layout_marginTop="30dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/amount_due_ksh_140_00"
            android:textStyle="bold"
            android:layout_marginTop="50dp"/>
        <TextView
            android:id="@+id/tv_pay_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ksh_1400"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="110dp"
            android:layout_marginTop="50dp"/>
        </LinearLayout>
        <Button
            android:layout_width="130dp"
            android:layout_height="38dp"
            android:layout_marginTop="70dp"
            android:layout_marginStart="210dp"
            android:text="@string/pay_now"
            android:backgroundTint="@color/blue"
            android:textColor="@color/white"
            android:layout_marginEnd="10dp"

            />




    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tv_recent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="Recent Transactions"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_view_upcoming"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <androidx.cardview.widget.CardView
        android:background="@color/white"
        android:id="@+id/card_view_recent"
        android:layout_width="match_parent"
        android:backgroundTint="@color/white"
        android:layout_height="100dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_recent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/blue">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/date"
                android:textColor="@color/white" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:layout_marginStart="50dp"
                android:textColor="@color/white" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mode"
                android:layout_marginStart="50dp"
                android:textColor="@color/white" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/amount"
                android:layout_marginStart="40dp"
                android:textColor="@color/white" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/custom_text_layout"
            android:layout_marginTop="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/_07_02_2021"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/chama_cont"
                android:layout_marginStart="25dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/mpesa"
                android:layout_marginStart="25dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/_1200_00"
                android:layout_marginStart="25dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/custom_text_layout"
            android:layout_marginTop="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/_04_02_2021"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/chama_cont"
                android:layout_marginStart="25dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/mpesa"
                android:layout_marginStart="25dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/_1200_00"
                android:layout_marginStart="25dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:elevation="4dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/custom_text_layout"
            android:layout_marginTop="70dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/_07_02_2021"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Penalty"
                android:layout_marginStart="25dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mpesa"
                android:textColor="@color/black"
                android:layout_marginStart="60dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="400.00"
                android:textColor="@color/black"
                android:layout_marginStart="25dp"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>








</androidx.constraintlayout.widget.ConstraintLayout>